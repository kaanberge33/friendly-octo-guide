#include <stdio.h>
#include <stdlib.h>   // rand, srand için
#include <time.h>     // time için

int main() {
    int guessnumber = 0, randomnumber, guesscount = 0, score = 100;

    srand(time(NULL));
    randomnumber = (rand() % 100) + 1;

    printf("1-100 arasinda bir sayi tuttum\n");
    printf("Tahmin et!\n");

    while (1) {
        printf("Tahmin sayisini giriniz (Exit with -1): ");
        scanf("%d", &guessnumber);

        if (guessnumber == -1) {
            printf("You have exited the game.\n");
            break;
        }

        if (guessnumber < 1 || guessnumber > 100) {
            printf("Lütfen 1 ile 100 arasinda bir sayi giriniz.\n");
            continue;
        }

        guesscount++;

        if (randomnumber == guessnumber) {
            printf("Tebrikler! %d. seferde bildiniz.\n", guesscount);
            printf("Puaniniz: %d\n", score);
            break;
        } else {
            if (guessnumber < randomnumber) {
                printf("Daha büyük bir sayi giriniz.\n");
            } else {
                printf("Daha küçük bir sayi giriniz.\n");
            }
            score -= 10;
            if (score < 0) score = 0;
            printf("Puaniniz: %d\n", score);
        }
    }

    return 0;
}
